#pragma region Includes
#include <ezButton.h>
#pragma endregion Includes

#pragma region Variables
ezButton btn_0(4);
#pragma endregion Variables

void setup() {
Serial.begin(9600);
Serial.println("Ready!!!");
#pragma region Setup
#pragma endregion Setup
}

// the loop function runs over and over again forever
void loop() {
String Message = "#";
#pragma region Loop            
btn_0.loop();
if (btn_0.isPressed()) {
		Message += "0:HIGH;";
	}
	else if (btn_0.isReleased()) {
		Message += "0:LOW;";
	}
#pragma endregion Loop

//loop ends here
	Message += "*";
	if (Message != "#*"){
		Serial.print(Message);
	}
}
